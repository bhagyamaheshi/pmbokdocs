<div id="new_project" class="col-md-4">
  <h3><%= link_to 'New Activity', new_activity_path %></h3>
</div>

<div id="all_projects" class="col-md-4">
  <div class="container">
    <div class="page-header">
      <h1>Listing activities</h1>
    </div>
    <br/>
    <div class="row">
      <table class="table">
        <thead>
        <tr>
          <th>Activityid</th>
          <th>Activityname</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @activities.each do |activity| %>
            <tr>
              <td><%= activity.id %></td>
              <td><%= activity.activityName %></td>
              <td><%= link_to 'Show', activity %></td>

            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
