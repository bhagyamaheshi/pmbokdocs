<div id="new_project" class="col-md-4">
	<div class="container">
		<div class="page-header">
      		<h1><%= @categoryName %></h1>
      		
					<table class="table table-bordered">
      			<thead>
        			<tr>
          		  <th>Version</th>
          			<th>Location</th>
        			</tr>
      			</thead>
      			<tbody>
              <% if @documentList != nil %>
        			<% @documentList.each do |list| %>
          			<tr>
            			<td><%= link_to @categoryName+' v'+list.version.to_s+'.'+list.versionMinor.to_s,'#' %></td>
            			<td><%= list.fileLocation %></td>
          			</tr>
      				<% end %>
              <% end %>
    			   </tbody>
			   </table>
    </div>
    <%= form_for(@document) do |form| %>
      <%= form.hidden_field :project_id, value: params[:projectId] %>
      <%= form.hidden_field :document_category_id, value: params[:documentCategoryId] %>
      <%= form.label :file, 'Upload Document:' %><br>
      <%= label_tag(:versionTypeMajor, "Major") %>
      <%= radio_button_tag(:versionType, "major", checked = false) %>
      <%= label_tag(:versionTypeMinor, "Minor") %>
      <%= radio_button_tag(:versionType, "minor", checked = true) %>
      <%= form.file_field :file %>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
	</div>
</div>

<script>
  <% if params[:notice].present? %>
    alert(<%= params[:notice] %>);
  <% end %>
</script>
